<Window x:Class="MusicaDB.Gui.Views.EditarMusicaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Música" Height="350" Width="400">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Label Content="Título:"/>
            <TextBox x:Name="TxtTitulo"/>

            <Label Content="Artista:"/>
            <TextBox x:Name="TxtArtista"/>

            <Label Content="Gênero:"/>
            <TextBox x:Name="TxtGenero"/>

            <Label Content="Álbum:"/>
            <ComboBox x:Name="CmbAlbum" DisplayMemberPath="Nome" 
                      SelectedValuePath="Id" />
        </StackPanel>

        <Button Grid.Row="1" Content="Salvar" Width="120" 
                HorizontalAlignment="Center" Margin="10"
                Click="Salvar_Click"/>
    </Grid>
</Window>
