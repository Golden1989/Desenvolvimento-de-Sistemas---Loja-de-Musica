<Window x:Class="MusicaDB.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loja de Música - GUI" Height="550" Width="900">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- BARRA DE PESQUISA -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="SearchBox" Width="300" Margin="0 0 10 0" />


            <Button Content="Buscar" Width="120" Click="Buscar_Click"/>
        </StackPanel>

        <!-- TABELA -->
        <DataGrid x:Name="MusicaGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True" 
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Título" Binding="{Binding Titulo}" Width="200"/>
                <DataGridTextColumn Header="Artista" Binding="{Binding Artista}" Width="200"/>
                <DataGridTextColumn Header="Gênero" Binding="{Binding Genero}" Width="150"/>
                <DataGridTextColumn Header="Álbum" Binding="{Binding NomeDoAlbum}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- BOTÕES CRUD -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0 10 0 0">

            <Button Content="Adicionar" Width="120" Margin="10" Click="Adicionar_Click"/>
            <Button Content="Editar" Width="120" Margin="10" Click="Editar_Click"/>
            <Button Content="Excluir" Width="120" Margin="10" Click="Excluir_Click"/>
        </StackPanel>

    </Grid>
</Window>
